<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/doctorSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search doctors..."
        android:iconifiedByDefault="false"
        android:layout_marginBottom="12dp"/>

    <!-- Scrollable Doctor List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Doctor Card 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#06a9b1"
                android:layout_marginBottom="12dp">

                <!-- Doctor Photo -->
                <ImageView
                    android:id="@+id/doctorPhoto1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/doc1"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"/>

                <!-- Doctor Name -->
                <TextView
                    android:id="@+id/doctorName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. John Smith"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_toEndOf="@id/doctorPhoto1"
                    android:layout_alignTop="@id/doctorPhoto1"/>

                <!-- Doctor Rating -->
                <RatingBar
                    android:id="@+id/doctorRating1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="4"
                    android:isIndicator="true"
                    android:progressTint="#f29e23"
                    android:secondaryProgressTint="#ffffff"
                    android:layout_toEndOf="@id/doctorPhoto1"
                    android:layout_below="@id/doctorName1"
                    android:layout_marginTop="4dp"/>

                <!-- Doctor Info -->
                <TextView
                    android:id="@+id/doctorInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialist in Orthodontist"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_toEndOf="@id/doctorPhoto1"
                    android:layout_below="@id/doctorRating1"
                    android:layout_marginTop="4dp"/>

                <!-- Book Now Button -->
                <Button
                    android:id="@+id/bookNow1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Book Now"
                    android:textColor="#06a9b1
"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_below="@id/doctorInfo1"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#ffffff"
                    />

                <!-- Profile Button -->
                <Button
                    android:id="@+id/profile1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#06a9b1"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_below="@id/doctorInfo1"
                    android:layout_toEndOf="@id/bookNow1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#ffffff"/>
            </RelativeLayout>

            <!-- Doctor Card 2 -->
