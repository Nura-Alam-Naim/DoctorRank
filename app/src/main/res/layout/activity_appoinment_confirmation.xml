<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <!-- Success Message -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/log0"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/successMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully Booked"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#f29e23"
        android:layout_marginBottom="24dp" />

    <!-- Appointment Details Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#06a9b1"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Date: 20 Aug 2025"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Time: 10:00 AM - 11:00 AM"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <!-- Doctor Information Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#06a9b1"
        android:padding="16dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name: Dr. John Doe"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization:  Orthodontist"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience: 12 Years"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 78 Satmasjid Road, Dhaka 1209"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room No: 220"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

    <!-- Home Button -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#f29e23"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</LinearLayout>