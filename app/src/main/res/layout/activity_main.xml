<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#FFFFFF"
android:padding="30dp"
tools:context=".MainActivity">

<TextView
    android:id="@+id/tvWelcome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Hello User"
    android:textSize="38dp"
    android:textColor="#FFFFFF"
    android:textStyle="bold"

    android:background="#06a9b1"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="30dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:contentDescription="Profile Picture"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/dummy"/>

        <Button
            android:id="@+id/btProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#000000"
            android:backgroundTint="#f29e23"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Date"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Day"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp">

    <Button
        android:id="@+id/btUpcomingAppointments"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Upcoming Appointments"
        android:textColor="#000000"
        android:backgroundTint="#f29e23"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/btBookPreferedDoc"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Book Prefered Doctor"
        android:textColor="#000000"
        android:backgroundTint="#f29e23"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</LinearLayout>
<LinearLayout
    android:id="@+id/SetVisible"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment Today"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#06a9b1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Date"
            android:background="#f29e23"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Time"
            android:background="#f29e23"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Doctor Name"
            android:background="#f29e23"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Speciality"
            android:textStyle="bold"
            android:background="#f29e23"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvDoctorList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"/>

</LinearLayout>
    <TextView
        android:id="@+id/tvNoAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Appointments Today"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:visibility="gone"
        android:padding="10dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please Log in First "
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:visibility="gone"
        android:padding="10dp"
        android:textColor="@color/black"/>

</LinearLayout>